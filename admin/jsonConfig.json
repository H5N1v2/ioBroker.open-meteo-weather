{
  "i18n": true,
  "type": "tabs",
  "items": {
    "main": {
      "type": "panel",
      "label": "settings_label",
      "items": {
        "headerPanel": {
          "type": "panel",
          "xs": 12, "sm": 12, "md": 12, "lg": 12, "xl": 12, 
          "items": {
            "icontest": {
              "type": "staticImage",
              "src": "open-meteo.png",
              "xs": 12, "sm": 3, "md": 2, "lg": 2, "xl": 2 
            },
            "descriptionText": {
              "type": "staticText",
              "text": "descriptionText_text",
              "style": { 
                "fontStyle": "italic",
                "fontSize": "20px",
                "fontWeight": "bold"
              },
              "xs": 12, "sm": 9, "md": 9, "lg": 9, "xl": 9 
            }
          }
        },

        "locationLabel": {
          "type": "header",
          "text": "location_header_text",
          "size": 5,
          "xs": 12, "sm": 12, "md": 12, "lg": 12, "xl": 12 
        },
        "locations": {
          "type": "table",
          "xs": 12, "sm": 12, "md": 12, "lg": 12, "xl": 12,
          "label": "locations_label",
          "help": "locations_help",
          "items": [
            {
              "type": "text",
              "attr": "name",
              "title": "location_name_label",
              "label": "",
              "width": "200px"
            },
            {
              "type": "text",
              "attr": "latitude",
              "title": "latitude_label",
              "label": "",
              "width": "150px",
              "help": {
                "en": "Leave empty to use system latitude",
                "de": "Leer lassen, um System-Breitengrad zu verwenden",
                "fr": "Laissez vide pour utiliser la latitude du système",
                "es": "Dejar vacío para usar la latitud del sistema",
                "it": "Lascia vuoto per utilizzare la latitudine del sistema",
                "pt": "Deixe vazio para usar a latitude do sistema",
                "nl": "Leeg laten om systeem breedtegraad te verwenden",
                "pl": "Pozostaw puste, aby użyć szerokości geograficznej systemu",
                "ru": "Оставьте пустым, чтобы использовать широту системы",
                "uk": "Залиште порожнім, щоб використовувати широту системы",
                "zh-cn": "留空以使用系统纬度"
              }              
            },
            {
              "type": "text",
              "attr": "longitude",
              "title": "longitude_label",
              "label": "",
              "width": "150px",
              "help": {
                "en": "Leave empty to use system longitude",
                "de": "Leer lassen, um System-Längengrad zu verwenden",
                "fr": "Laissez vide pour utiliser la longitude du système",
                "es": "Dejar vacío para usar la longitud del sistema",
                "it": "Lascia vuoto per utilizzare la longitudine del sistema",
                "pt": "Deixe vazio para usar a longitude do sistema",
                "nl": "Leeg laten om systeem lengtegraad te verwenden",
                "pl": "Pozostaw puste, aby użyć długości geograficznej systemu",
                "ru": "Оставьте пустым, чтобы использовать долгоtu системы",
                "uk": "Залиште порожнім, щоб використовувати долгоtu системы",
                "zh-cn": "留空以使用系统经度"
              }
            },
            {
              "type": "select",
              "attr": "timezone",
              "title": "timezone_label",
              "label": "",
              "width": "150px",
              "options":[
                  { "value": "auto", "label": "autom" },
                  { "value": "GMT", "label": "GMT / UTC" },
                  { "value": "Europe/Berlin", "label": "Europa/Berlin" },
                  { "value": "Europe/London", "label": "Europe/London" },
                  { "value": "Europe/Moscow", "label": "Europe/Moscow" },
                  { "value": "America/New_York", "label": "America/New York" },
                  { "value": "America/Chicago", "label": "America/Chicago" },
                  { "value": "America/Denver", "label": "America/Denver" },
                  { "value": "America/Los_Angeles", "label": "America/Los Angeles" },
                  { "value": "America/Sao_Paulo", "label": "America/Sao Paulo" },
                  { "value": "America/Anchorage", "label": "America/Anchorage" },
                  { "value": "Asia/Tokyo", "label": "Asia/Tokyo" },
                  { "value": "Asia/Bangkok", "label": "Asia/Bangkok" },
                  { "value": "Asia/Singapore", "label": "Asia/Singapore" },
                  { "value": "Australia/Sydney", "label": "Australia/Sydney" },
                  { "value": "Africa/Cairo", "label": "Afrika/Cairo" },
                  { "value": "Pacific/Auckland", "label": "Pacific/Auckland" }
                ],
                "default": "auto"
            }
          ]
        },
        "meteoredURL": {
          "type": "staticLink",
          "text": "koordinates_text",
          "href": "https://nominatim.openstreetmap.org/ui/search.html",
          "button": true,
          "color": "primary",
          "xs": 12, "sm": 6, "md": 6, "lg": 6, "xl": 6,
          "newLine": true,
          "style": {
            "marginTop": "20px",
            "marginBottom": "20px",
            "fontWeight": "bold",
            "border": "2px solid #f3d421"
          }
        },
        "widgetURL": {
          "type": "staticLink",
          "text": "widget_text",
          "href": "https://github.com/H5N1v2/VIS2-widget-script-om-weather",
          "button": true,
          "color": "primary",
          "xs": 12, "sm": 6, "md": 6, "lg": 6, "xl": 6,
          "style": {
            "marginTop": "20px",
            "marginBottom": "20px",
            "fontWeight": "bold",
            "border": "2px solid #f3d421"
          }
        },

        "divider1": { "type": "divider", "xs": 12, "sm": 12, "md": 12, "lg": 12, "xl": 12 }, 

        "options_header": {
          "type": "header",
          "text": "options_header_text",
          "size": 5,
          "xs": 12, "sm": 12, "md": 12, "lg": 12, "xl": 12 
        },
        "updateInterval": {
          "type": "select",
          "label": "interval_label",
          "default": 30,
          "options": [
            { "value": 15, "label": "interval_15_min" },
            { "value": 30, "label": "interval_30_min" },
            { "value": 60, "label": "interval_60_min" }
          ],
          "xs": 12, "sm": 6, "md": 4, "lg": 2, "xl": 2 
        },
        "forecastDays": {
          "type": "select",
          "label": "forecastDays_label",
          "default": 1,
          "options": [
            { "value": 1, "label": "days_1" },
            { "value": 3, "label": "days_3" },
            { "value": 7, "label": "days_7" },
            { "value": 14, "label": "days_14" },
            { "value": 16, "label": "days_16" }
          ],
          "xs": 12, "sm": 6, "md": 4, "lg": 2, "xl": 2 
        },
        "isImperial": {
            "type": "select",
            "label": "unit_system_label",
            "default": false,
            "options": [
                { "value": false, "label": "metric_label" },
                { "value": true, "label": "imperial_label" }
            ],
            "xs": 12, "sm": 6, "md": 4, "lg": 2, "xl": 2 
        },
        "isWinddirection_icon": {
            "type": "select",
            "label": "windicon_system_label",
            "default": false,
            "options": [
                { "value": false, "label": "direct1_label" },
                { "value": true, "label": "direct2_label" }
            ],
            "xs": 12, "sm": 6, "md": 4, "lg": 2, "xl": 2 
        },
        "isNight_icon": {
            "type": "select",
            "label": "isnight_system_label",
            "default": false,
            "options": [
                { "value": false, "label": "dark_label" },
                { "value": true, "label": "bright_label" }
            ],
            "xs": 12, "sm": 6, "md": 4, "lg": 2, "xl": 2 
        },

        "divider2": { "type": "divider", "xs": 12, "sm": 12, "md": 12, "lg": 12, "xl": 12 }, 

        "forecastHoursEnabled": {
          "type": "checkbox",
          "label": "forecastHoursEnabled_label",
          "help": "forecastHoursEnabled_help",
          "default": false,
          "xs": 12, "sm": 6, "md": 4, "lg": 3, "xl": 3 
        },
        "forecastHours": {
          "type": "select",
          "label": "forecastHours_label",
          "default": 1,
          "options": [
            { "value": 1, "label": "Hours_1" },
            { "value": 6, "label": "Hours_6" },
            { "value": 12, "label": "Hours_12" },
            { "value": 24, "label": "Hours_24" }
          ],
          "xs": 12, "sm": 6, "md": 4, "lg": 3, "xl": 3, 
          "hidden": "!data.forecastHoursEnabled"
        },

        "divider3": { "type": "divider", "xs": 12, "sm": 12, "md": 12, "lg": 12, "xl": 12, "hidden": "!data.airQualityEnabled" }, 

        "airQualityEnabled": {
          "type": "checkbox",
          "label": "airQualityEnabled_label",
          "help": "airQualityHint_text",
          "default": false,
          "xs": 12, "sm": 6, "md": 4, "lg": 3, "xl": 3, 
          "newLine": true
        },
        "airQualityForecastDays": {
          "type": "select",
          "label": "airQualityForecastDays_label",
          "default": 1,
          "options": [
            { "value": 0, "label": "no_forecast" },
            { "value": 1, "label": "days_1" },
            { "value": 3, "label": "days_3" },
            { "value": 6, "label": "days_6" }
          ],
          "xs": 12, "sm": 6, "md": 4, "lg": 3, "xl": 3,
          "hidden": "!data.airQualityEnabled"
        }
      }
    }
  }
}